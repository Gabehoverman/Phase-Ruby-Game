  	  <h2>Reset Password</h2>
<%= form_tag password_resets_path, :method => :post do %>
  <div class="field">
    <%= label_tag :email, "Email: "%>
    <%= email_field_tag :email, params[:email],:required => 'required', :placeholder => 'tree@example.com'%>
