<form role="form" summary="Student form fields">
	<div class="form-group">
		<%= f.label(:student_id, "Student ID") %>
		<%= f.text_field(:student_id) %>
	</div>
	<div class="form-group">
		<%= f.label(:active, "Active") %>
		<%= f.check_box(:active, { checked: true })%>
	</div>
	<div class="form-buttons">
      	<%= submit_tag("Add Student", :class => "btn btn-primary") %>
	</div>
</form>
